import java.util.*;

public class Main {
    public static void main(String[] args) {

        System.out.println("Square Root Program");

        Scanner input = new Scanner(System.in);
        
        System.out.println("Enter a number: ");
        int number = input.nextInt();  // stores the user's input

        int x = number * number;  // formula to determine the sqrt
        System.out.println("The square root of the number " + number + " is " + x);

        double y = Math.pow(number, 2);  // formula to determine the sqrt
        System.out.println("Another way to do the sqrt, but same result: " + y);

    }
}
