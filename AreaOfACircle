import java.util.*;

public class Main {
    public static void main(String[] args) {

        // float radius, area;
        Scanner input = new Scanner(System.in);  // object used for input scanner

        System.out.println("Enter the radius of the circle: ");
        double radius = input.nextDouble();  // stores the user's input

        double area = (3.14) * Math.pow(radius, 2);  // equation to calculation area of circle

        // display to the console
        System.out.println("The area of a circle with radius of " + radius + " is " + area);

    }
}


